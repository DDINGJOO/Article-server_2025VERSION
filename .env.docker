# Docker Compose 환경 변수
# 이 파일은 Docker Compose 실행 시 사용됩니다

# Spring profile
SPRING_PROFILES_ACTIVE=docker

# MariaDB 설정 (Docker 컨테이너용)
MYSQL_ROOT_PASSWORD=articlepass123
MYSQL_DATABASE=article_db
MYSQL_USER=article_user
MYSQL_PASSWORD=articlepass123

# Application Database configuration (Spring Boot용)
DATABASE_HOST=localhost  # 호스트에서 접속 시
DATABASE_PORT=13306      # 매핑된 외부 포트
DATABASE_NAME=article_db
DATABASE_USER_NAME=article_user
DATABASE_PASSWORD=articlepass123

# Docker 내부 네트워크에서 사용 (application-docker.yaml용)
DATABASE_HOST_DOCKER=article-mariadb
DATABASE_PORT_DOCKER=3306

# Kafka
KAFKA_URL1=localhost:19092
KAFKA_URL2=localhost:19093
KAFKA_URL3=localhost:19093
KAFKA_URL_DOCKER=article-kafka:9092

# Redis
REDIS_HOST=localhost
REDIS_PORT=16379
REDIS_HOST_DOCKER=article-redis
REDIS_PORT_DOCKER=6379

# JWT (테스트용)
JWT_SECRET=article-server-secret-key-for-development-2025
JWT_ACCESS_TOKEN_EXPIRE_TIME=3600
JWT_REFRESH_TOKEN_EXPIRE_TIME=860000